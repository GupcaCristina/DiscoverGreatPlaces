@inject IViewLocalizer Localizer

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav justify-content-end">
            <li  class="nav-item">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link active"> @UserManager.GetUserName(User)!</a>
            </li>
            <li  class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn nav-link active">@Localizer["LogOut"]</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul  class="nav justify-content-end">
        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link active">@Localizer["Register"]</a></li>

<li class="nav-item" ><a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link active">@Localizer["LogIn"]</a></li>

</ul>
}
