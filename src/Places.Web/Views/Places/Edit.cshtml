@model Places.Web.Models.ViewModels.CreatePlaceViewModel


<h4>Edit Place</h4>
<hr class="style17" />



<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />

            <div class="row">

                <div class="form-group col-md-7">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control inline" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="Type" class="control-label"></label>
                    @Html.DropDownListFor(m => m.Type, new SelectList(ViewBag.Types, "Id", "Name"), new { @class = "country form-control inline" })
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group">
                <label asp-for="Descriprion" class="control-label"></label>
                <textarea asp-for="Descriprion" class="form-control col-md-12 inputtextarea"></textarea>
                <span asp-validation-for="Descriprion" class="text-danger"></span>
            </div>
            <div class="row">

                <div class="col-md-6">
                    <h4>Address</h4>
                    <hr class="style17" />
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="CountryId" class="control-label"></label>
                            @Html.DropDownListFor(m => m.CountryId, new SelectList(ViewBag.Countries, "Id", "Name"), new { @class = "country form-control" })
                            <span asp-validation-for="CountryId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="CityId" class="control-label"></label>
                            @Html.DropDownListFor(x => x.CityId, new SelectList(ViewBag.Cities, "Id", "Name"), new { @class = "form-control" })
                            <span asp-validation-for="CityId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-8">
                            <label asp-for="Street" class="control-label"></label>
                            @Html.DropDownListFor(x => x.Street, new SelectList(ViewBag.Streets, "Id", "Name"), new { @class = "form-control" })
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="StreetNumber" class="control-label"></label>
                            <input asp-for="StreetNumber" class="form-control" />
                            <span asp-validation-for="StreetNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostalCode" class="control-label"></label>
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-md-6">
                    <h4>Contact Info  </h4>
                    <hr class="style17" />
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telephone" class="control-label"></label>
                        <input asp-for="Telephone" class="form-control" />
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Website" class="control-label"></label>
                        <input asp-for="Website" class="form-control" />
                        <span asp-validation-for="Website" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
         
                <div class="form-group col-md-6">
                    <label class="control-label"> Image </label>
                    <input type="file" name="img" class="form-control" />
                    <span asp-validation-for="Image" id="imgInp"></span>
                </div>
            </div>
          


            <br />
            <div class="form-group">
                <input type="submit" value="Save changes" class="btn btn-default" />
            </div>

            @Html.ActionLink("Delete Place", "Delete", "Places", new { id = @Model.Id },
new { @class = "btn btn-danger" })

        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/AddressAjaxRequests.js"></script>

}

