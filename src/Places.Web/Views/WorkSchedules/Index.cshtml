@model IEnumerable<Places.Web.Models.ViewModels.WorkScheduleViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasLunchBreak)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartBreak)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndBreak)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasLunchBreak)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartBreak)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndBreak)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
