@model Places.Web.Models.ViewModels.WorkScheduleViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>WorkSchedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="PlaceId" value="6" />@*@ViewBag.Id*@

            <div class="form-group">
                <label asp-for="StartWork" class="control-label"></label>
                <input asp-for="StartWork" class="form-control" />
                <span asp-validation-for="StartWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndWork" class="control-label"></label>
                <input asp-for="EndWork" class="form-control" />
                <span asp-validation-for="EndWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasLunchBreak" /> @Html.DisplayNameFor(model => model.HasLunchBreak)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="StartBreak" class="control-label"></label>
                <input asp-for="StartBreak" class="form-control" />
                <span asp-validation-for="StartBreak" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndBreak" class="control-label"></label>
                <input asp-for="EndBreak" class="form-control" />
                <span asp-validation-for="EndBreak" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <select asp-for="Day" asp-items="@( new SelectList(ViewBag.Days, "Id", "Name"))" selected="Day" class="form-control"></select>
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
