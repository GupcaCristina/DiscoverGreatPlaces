@model Places.Web.Models.ViewModels.WorkScheduleViewModel




<h2>Create</h2>

<h4>WorkSchedule</h4>
<hr />
<div class="row modal-body form-horizontal">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlaceId" value="@ViewBag.PlaceId" />
            <div class="form-group">


                <label asp-for="Day" class="control-label"></label>
                <select asp-for="Day" asp-items="@(new SelectList(ViewBag.Days, "Id", "Name"))" class="form-control"></select>
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartWork" class="control-label"></label>
                <input asp-for="StartWork" placeholder="08:00" class="form-control" />
                <span asp-validation-for="StartWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndWork" class="control-label"></label>
                <input asp-for="EndWork" placeholder="18:00" class="form-control" />
                <span asp-validation-for="EndWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>

                        <input class="hasLunch" type="checkbox" name="checkbox-1" id="checkbox-1" asp-for="HasLunchBreak" />
                        @Html.DisplayNameFor(model => model.HasLunchBreak)
                    </label>
                </div>
            </div>
       

            <div id="lunchbreak" style="display: none;">
                <div class="form-group">
                    <label asp-for="StartBreak" class="control-label"></label>
                    <input asp-for="StartBreak" placeholder="12:00" class="form-control" />
                    <span asp-validation-for="StartBreak" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndBreak" class="control-label"></label>
                    <input asp-for="EndBreak" placeholder="13:00" class="form-control" />
                    <span asp-validation-for="EndBreak" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}



